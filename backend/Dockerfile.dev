FROM node:18-alpine

WORKDIR /usr/src/app

# Instalar dependencias de desarrollo
RUN apk add --no-cache python3 make g++

# Copiar package.json
COPY package*.json ./

# Instalar todas las dependencias (incluyendo dev)
RUN npm install

# Copiar c√≥digo fuente
COPY . .

# Exponer puertos
EXPOSE 3000 3001

# Comando para desarrollo
CMD ["npm", "run", "dev"]
